<Window x:Class="IrcNotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:tb="http://www.hardcodet.net/taskbar">
    <Grid>
        <tb:TaskbarIcon
      x:Name="MyNotifyIcon"
        IconSource="/Resources/chat.ico"
      ToolTipText="IRC Notify" 
        
        >
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="History" />
                <MenuItem Header="Config" />
                <MenuItem Header="Exit" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>

    </tb:TaskbarIcon>
<ScrollViewer>
    
        <TextBlock Text="{Binding Data}" Margin="4"></TextBlock>
</ScrollViewer></Grid>
</Window>